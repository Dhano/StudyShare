<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Screen?>

<AnchorPane id="Pane" fx:id="loginRoot" prefHeight="${screen.visualBounds.width}" prefWidth="${screen.visualBounds.width}" stylesheets="@../../css/loginStyles.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.pages.Login">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>
    <children>
        <TextField id="Username" fx:id="username" layoutX="210.0" layoutY="144.0" prefHeight="45.0" prefWidth="354.0" promptText="Username" styleClass="input" />

        <PasswordField id="Password" fx:id="password" layoutX="210.0" layoutY="212.0" prefHeight="45.0" prefWidth="354.0" promptText="Password" styleClass="input" />
        <Button id="Login" fx:id="btnLogin" layoutX="269.0" layoutY="289.0" mnemonicParsing="false" onAction="#validateLogin" prefHeight="45.0" prefWidth="237.0" styleClass="input" />
        <Label id="header" accessibleRole="IMAGE_VIEW" alignment="CENTER" layoutX="-1.0" layoutY="1.0" prefHeight="68.0" prefWidth="775.0" text="StudyShare" textFill="#61514f">
            <font>

                <Font name="Segoe UI Semibold" size="36.0" />
            </font>

        </Label>
    </children>
</AnchorPane>
